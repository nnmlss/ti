{
  "name": "takeoff-info",
  "version": "2.0.0",
  "description": "Nodejs driven API for paragliding sites in Bulgaria",
  "license": "ISC",
  "author": "Borislav Denizov",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "start": "npm run clean && concurrently \"npm:start:backend\" \"npm:start:frontend\"",
    "start:backend": "tsc-watch --onSuccess \"node dist/app.js\"",
    "start:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "cd frontend && npm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit && cd frontend && npx tsc --noEmit",
    "lint:frontend": "cd frontend && npm run lint",
    "check": "npm run typecheck && npm run lint:frontend"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "mongoose": "^8.17.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "pdfkit": "^0.17.1",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.2.0",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "tsc-watch": "^7.1.1",
    "vitest": "^3.2.4"
  }
}
