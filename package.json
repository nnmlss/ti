{
  "name": "takeoff-info",
  "version": "3.5.7",
  "description": "Nodejs driven API and Frontend for paragliding sites in Bulgaria",
  "license": "ISC",
  "author": "Borislav Denizov",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "start": "npm run clean && concurrently \"npm:start:backend\" \"npm:start:frontend\"",
    "start:backend": "tsc-watch --onSuccess \"npm run postcompile\"",
    "postcompile": "tsc-alias && node fix-graphql-import.js && node dist/app.js",
    "start:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc && tsc-alias -p tsconfig.json && node fix-graphql-import.js && node create-cjs-wrapper.js",
    "build:frontend": "cd frontend && npm run build",
    "build:analyze": "cd frontend && npm run build:analyze",
    "perf:check": "cd frontend && npm run perf:check",
    "perf:build": "npm run build && npm run perf:check",
    "preview": "concurrently \"NODE_ENV=production node dist/app.js\" \"cd frontend && npm run preview\"",
    "build:preview": "npm run build && npm run preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit && cd frontend && npx tsc --noEmit",
    "lint:frontend": "cd frontend && npm run lint",
    "check": "npm run typecheck && npm run lint:frontend",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "pm2:start": "npm run build && pm2 start ecosystem.config.cjs",
    "pm2:preview": "npm run build && pm2 start ecosystem.config.cjs --env production",
    "pm2:stop": "pm2 stop takeoff-info",
    "pm2:restart": "pm2 restart takeoff-info",
    "pm2:delete": "pm2 delete takeoff-info",
    "pm2:logs": "pm2 logs takeoff-info",
    "pm2:monit": "pm2 monit",
    "admin": "npm run build && node dist/cli/admin.js",
    "admin:dev": "npx tsx src/cli/admin.ts"
  },
  "dependencies": {
    "@graphql-tools/schema": "^10.0.25",
    "@graphql-yoga/plugin-graphql-sse": "^3.15.1",
    "bcryptjs": "^3.0.2",
    "commander": "^14.0.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "graphql": "^16.11.0",
    "graphql-scalars": "^1.24.2",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^5.15.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "pdfkit": "^0.17.1",
    "sharp": "^0.34.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-resolvers": "^4.5.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.2.1",
    "@types/nodemailer": "^6.4.17",
    "@types/pdfkit": "^0.17.2",
    "@types/supertest": "^6.0.3",
    "@types/winston": "^2.4.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "pm2": "^6.0.13",
    "supertest": "^7.1.4",
    "ts-prune": "^0.10.3",
    "tsc-alias": "^1.8.16",
    "tsc-watch": "^7.1.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
